{
  "name": "ifrs15-test-agent",
  "version": "1.0.0",
  "description": "AI-powered testing agent for IFRS 15 Revenue Manager",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "run:tests": "tsx src/index.ts run",
    "run:analyze": "tsx src/index.ts analyze",
    "run:report": "tsx src/index.ts report"
  },
  "keywords": [
    "testing",
    "automation",
    "playwright",
    "ifrs15",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "allure-js-commons": "^2.5.0",
    "allure-playwright": "^2.5.0",
    "commander": "^11.1.0",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.0",
    "firebase-admin": "^12.0.0",
    "openai": "^4.20.0",
    "playwright": "^1.40.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
